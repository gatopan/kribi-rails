/* OVERRIDES */
.form-group {
  label {
    display: block;
    text-align: right;
    clear:both;
    font-weight: 400;
  }
  input {
    float:right;
    clear:both;
  }
  .form-control {
    padding: 7px !important;
    font-size: 11px !important;
    text-align: right;
  }
}

.field_with_errors {
  input {
    border:1px solid red;
  }
}

/* GLOBAL */
.heart {
  display: inline-block;
  margin-top: 3px;
  margin-right: 2px;
  width: 11px;
  height: 11px;
  vertical-align: top;
  background-size: 11px 11px;
  background-repeat: no-repeat;
  background-image:url(<%= asset_data_uri 'heart@2x.png' %>);
  transition-property: all!important;
  transition-duration: .3s!important;
}

/* PER VIEW */

.batch-show, .batch-update {
  th {
    text-align: center;
  }

  td, input {
    text-align: right;
  }

  td input {
    float: right;
  }

  .form-control, .single-line {
    min-width: 50px;
  }

  .action-buttons {
    text-align: center;
    margin-bottom: 70px;

    form, input, select, button {
      display: inline-block;
    }
  }
}

.event-editor {
  td {
    .date {
      input {
        min-width: 135px;
      }
    }
  }
}

.export {
  th, td {
    text-align: center !important;
  }
  .export-button-group {
    width: 33%;
  }
}
